@model List<DAHQTCSDL.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h1 class="text-center">Danh sách nhân viên</h1>
<div class="col-md-3">
    <btn class="btn btn-primary"><a href="~/Employee/Create">Thêm NV</a></btn>
    <br />
</div>
<table class="table table-bordered">
    <tr>
        <th>Mã Nhân Viên</th>
        <th>Họ Tên</th>
        <th>Ngày Sinh</th>
        <th>Địa Chỉ</th>
        <th>SDT</th>
        <th>Khác</th>
    </tr>
    @foreach (var t in Model)
    {
        <tr>
            <th>@t.manv</th>
            <th>@t.tennv</th>
            <th>@t.ngaysinh</th>
            <th>@t.diachi</th>
            <th>@t.sdt</th>
         
            <td>
                @Html.ActionLink("Sửa", "Update", new { id = t.manv, controller = "Employee" })
                @Html.ActionLink("Xóa", "Delete", new { id = t.manv, controller = "Employee" })
            </td>
            
        </tr>
    }
</table>


