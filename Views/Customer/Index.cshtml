@model List<DAHQTCSDL.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h1 class="text-center">Danh sách khách hàng</h1>
<div class="col-md-3">
    <btn class="btn btn-primary"><a href="~/Customer/Create">Thêm NV</a></btn>
    <br />
</div>
<table class="table table-bordered">
    <tr>
        <th>Mã Nhân Viên</th>
        <th>Họ Tên</th>
        <th>Địa Chỉ</th>
        <th>SDT</th>
        <th>Khác</th>
    </tr>
    @foreach (var t in Model)
    {
        <tr>
            <th>@t.makh</th>
            <th>@t.tenkh</th>
            <th>@t.diachikh</th>
            <th>@t.sdtkh</th>
            <td>
                @Html.ActionLink("Sửa", "Update", new { id = t.makh, controller = "Customer" })
                @Html.ActionLink("Xóa", "Delete", new { id = t.makh, controller = "Customer" })
            </td>
        </tr>
    }
</table>

